<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/video_row__padding"
    >

    <ImageView
        android:id="@+id/video_image"
        android:layout_width="@dimen/video_row_image_width"
        android:layout_height="@dimen/video_row_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/video_row_right_margin"
        />

    <TextView android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/video_row_top_margin"
        android:textSize="@dimen/video_row_title_text_size"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/video_publishedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_image"
        android:layout_below="@+id/video_title"
        android:textSize="@dimen/video_row_description_text_size"
        />

    <!--<TextView android:id="@+id/video_viewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_publishedDate"
        android:layout_below="@+id/video_title"
        android:textSize="@dimen/video_row_description_text_size"
        />-->

</RelativeLayout>