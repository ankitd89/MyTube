<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/video_image"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/video_metadata_search">

    <TextView android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Title"
        android:textSize="18sp"
        android:lines="2" />

    <TextView android:id="@+id/video_publishedDate"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Created Date"
        android:lines="2" />

    <TextView android:id="@+id/video_viewCount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Views"
        android:layout_marginTop="5dp" />
    </LinearLayout>

    <ImageButton android:id="@+id/starImage"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/star_normal"
        android:background="#00ffffff"
        android:focusable="false" />
</LinearLayout>